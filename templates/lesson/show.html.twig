{% extends 'base_admin.html.twig' %}

{% block title %}{{ lesson.title }} - Partie {{ current_part }}{% endblock %}

{% block admin_content %}
<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2>{{ lesson.title }} - Partie {{ current_part }}</h2>
        </div>
        <div class="card-body">
            <p class="fs-5">{{ content.content }}</p>
        </div>
        <div class="card-footer d-flex justify-content-between">
            {% if current_part > 1 %}
                <a href="{{ path('app_lesson_show', {'id': lesson.id, 'part': current_part - 1}) }}" class="btn btn-outline-primary">
                    ← Précédent
                </a>
            {% else %}
                <span></span>
            {% endif %}

            {% if current_part < total_parts %}
                <a href="{{ path('app_lesson_show', {'id': lesson.id, 'part': current_part + 1}) }}" class="btn btn-primary">
                    Suivant →
                </a>
            {% endif %}
        </div>
    </div>
    <div class="mt-3">
        <a href="{{ path('app_lesson_index') }}" class="btn btn-secondary">Retour aux leçons</a>
    </div>
</div>
{% endblock %}
