{% extends 'base.html.twig' %}

{% block title %}Téléchargement de la facture{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card p-4">
        <!-- Page Title -->
        <h2 class="text-center" style="color: #00497c;">Facture disponible</h2>

        <!-- Message about the availability of the invoice -->
        <p class="mt-3" style="color: #384050;">
            Votre facture pour la commande n°{{ order.id }} est maintenant prête.
            Vous pouvez la visualiser ou la télécharger au format PDF.
        </p>

        <div class="text-center mt-4">
            <!-- Button to download the invoice -->
            <a href="{{ path('invoice_download', { 'orderId': order.id }) }}" 
               class="btn btn-primary" 
               style="background-color: #0074c7; border-color: #0074c7;">
                Télécharger la facture
            </a>
            <!-- Button to go back to the order details -->
            <a href="{{ path('order_details', { 'orderId': order.id }) }}" 
               class="btn btn-secondary" 
               style="background-color: #f1f8fc; border-color: #0074c7; color: #0074c7;">
                Retour aux détails de la commande
            </a>
        </div>
    </div>
</div>
{% endblock %}
