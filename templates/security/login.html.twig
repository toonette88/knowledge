{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="d-flex justify-content-center my-5">
    <div class="border border-black rounded p-4 shadow-sm bg-white" style="max-width: 400px; width: 100%;">
        <form method="post">
            <!-- Display any authentication errors -->
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            <!-- Form heading -->
            <h2 class="text-center border-bottom border-primary-subtle pb-2">Se connecter</h2>

            <!-- Email input field -->
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Email :</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>

            <!-- Password input field -->
            <div class="mb-3">
                <label for="inputPassword" class="form-label">Mot de passe :</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <!-- CSRF Token for security -->
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <!-- Submit button -->
            <div class="d-grid gap-2">
                <button class="btn text-white" type="submit" style="background-color: #0074c7;">
                    Se Connecter
                </button>
            </div>

            <!-- Link for registration page -->
            <div class="text-center mt-3">
                <p>Pas encore inscrit ?</p>
                <a class="btn btn-outline-primary" href="{{ path('app_register') }}">Cr√©er un compte</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
