{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="d-flex justify-content-center my-5">
    <div class="border border-black">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            <div class="border-bottom border-primary-subtle p-1 mx-2">
                <h2>Se connecter</h2>
            </div>
            <div class="p-2">
                <div class="p-2">
                    <label for="inputEmail">Email : </label>
                    <input type="name" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="p-2">
                    <label for="inputPassword">Password :</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>
                <div class="p-2">
                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >
                    <button class="btn" type="submit">
                    Se Connecter
                    </button></br>
                </div>
            </div>
            <div class="py-3 px-2">
                <label for="inputBtn">Pas encore inscrit ?</label></br>
                <a class="btn" href="{{ path('app_register')}}">Cr√©er un compte</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
