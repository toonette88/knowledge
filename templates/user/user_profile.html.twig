{% extends 'base_admin.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block admin_content %}
<div class="container mt-5 d-flex justify-content-center">
    <div class="card p-4 shadow-sm" style="max-width: 600px; width: 100%; background-color: #f1f8fc; border: 1px solid #0074c7;">
        <h2 class="text-center mb-4" style="color: #00497c;">Mon Profil</h2>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">{{ message }}</div>
        {% endfor %}

        <div class="mb-3">
            <strong>Nom :</strong> {{ user.name }}
        </div>

        <div class="mb-3">
            <strong>Pr√©nom :</strong> {{ user.firstName }}
        </div>

        <div class="mb-3">
            <strong>Email :</strong> {{ user.email }}
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('user_profile_edit') }}" class="btn btn-warning">Modifier mon profil</a>
            
            <form method="post" action="{{ path('user_profile_delete') }}">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                <button type="submit" class="btn btn-danger">Supprimer mon compte</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
