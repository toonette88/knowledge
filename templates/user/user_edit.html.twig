{% extends 'base_admin.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block admin_content %}
<div class="container mt-5 d-flex justify-content-center">
    <div class="card p-4 shadow-sm" style="max-width: 600px; width: 100%; background-color: #f1f8fc; border: 1px solid #0074c7;">
        <h2 class="text-center mb-4" style="color: #00497c;">Modifier mon profil</h2>

        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.name, 'Nom', {'class': 'form-label', 'style': 'color: #384050;'}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.firstName, 'Prénom', {'class': 'form-label', 'style': 'color: #384050;'}) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.firstName) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.email, 'Email', {'class': 'form-label', 'style': 'color: #384050;'}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.plainPassword, 'Nouveau mot de passe', {'class': 'form-label', 'style': 'color: #384050;'}) }}
            {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.plainPassword) }}
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">Mettre à jour</button>
            <a href="{{ path('user_profile') }}" class="btn btn-secondary">Retour</a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
