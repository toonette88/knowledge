{% extends 'base.html.twig' %}

{% block title %}Édition de l'utilisateur{% endblock %}

{% block body %}
<div class="container mt-4 d-flex justify-content-center">
    <div class="card shadow-lg p-4 rounded" style="max-width: 600px; width: 100%; background-color: #f1f8fc;">
        <h2 class="text-center mb-4" style="color: #00497c;">Édition de l'utilisateur</h2>

        {# Affichage des messages flash #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {# Formulaire d'édition #}
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            <div class="mb-3">
                {{ form_label(form.name, 'Nom', {'class': 'form-label fw-bold', 'style': 'color: #0074c7;'}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control border-2', 'style': 'border-color: #0074c7;'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.firstName, 'Prénom', {'class': 'form-label fw-bold', 'style': 'color: #0074c7;'}) }}
                {{ form_widget(form.firstName, {'attr': {'class': 'form-control border-2', 'style': 'border-color: #0074c7;'}}) }}
                {{ form_errors(form.firstName) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.email, 'Email', {'class': 'form-label fw-bold', 'style': 'color: #0074c7;'}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control border-2', 'style': 'border-color: #0074c7;'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <div>
                    <button type="submit" class="btn text-white px-4" style="background-color: #0074c7;">Mettre à jour</button>
                    <a href="{{ path('admin_user_delete', {id: user.id}) }}" class="btn text-white px-4" style="background-color: #cd2c2e;">Supprimer</a>
                </div>
                <a href="{{ path('admin_users_list') }}" class="btn text-white px-4" style="background-color: #384050;">Retour</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
