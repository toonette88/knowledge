{% extends 'base_admin.html.twig' %}

{% block title %}Tableau de Bord{% endblock %}

{% block admin_content %}
    <div class="container mt-4">
        <h3 class="mb-4">Tableau de Bord Administratif</h3>

        <div class="row g-4">
            <!-- Statistiques -->
            <div class="col-md-3">
                <div class="card h-100">
                    <div class="card-header" style="background-color: #f1f8fc;">Catégories</div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ categoryCount }}</h5>
                        <p class="card-text">Total des catégories.</p>
                        <a href="{{ path('app_category_index') }}" class="btn btn-light mt-auto">Voir</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card h-100">
                    <div class="card-header" style="background-color: #f1f8fc;">Cursus</div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ courseCount }}</h5>
                        <p class="card-text">Total des cursus disponibles.</p>
                        <a href="{{ path('app_course_index') }}" class="btn btn-light mt-auto">Voir</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card h-100">
                    <div class="card-header" style="background-color: #f1f8fc;">Leçons</div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ lessonCount }}</h5>
                        <p class="card-text">Nombre total de leçons.</p>
                        <a href="{{ path('app_lesson_index') }}" class="btn btn-light mt-auto">Voir</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card h-100">
                    <div class="card-header" style="background-color: #f1f8fc;">Utilisateurs</div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ userCount }}</h5>
                        <p class="card-text">Nombre total d'utilisateurs.</p>
                        <a href="{{ path('admin_users_list') }}" class="btn btn-light mt-auto">Voir</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .card {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            font-weight: bold;
        }

        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-body .btn {
            margin-top: auto; /* Assure que le bouton est toujours en bas de la carte */
        }

        /* Pour que les cartes aient la même hauteur et largeur */
        .row > .col-md-3 {
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }

        .card-header {
            background-color: #f1f8fc !important;
        }

        .card-header.bg-primary {
            background-color: #0074c7 !important;
        }

        .card-header.bg-success {
            background-color: #82b864 !important;
        }

        .card-header.bg-danger {
            background-color: #cd2c2e !important;
        }

        .card-header.bg-warning {
            background-color: #f1f8fc !important;
        }

        /* Modifier la couleur des boutons */
        .btn-light {
            background-color: #f1f8fc;
            border-color: #0074c7;
            color: #0074c7;
        }

        .btn-light:hover {
            background-color: #0074c7;
            color: #fff;
        }

        /* Espacement entre les cartes */
        .g-4 {
            gap: 1.5rem;
        }
    </style>
{% endblock %}
