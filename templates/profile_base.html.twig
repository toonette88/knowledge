{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Container with a margin on top for spacing -->

    <div class="d-flex justify-content-between align-items-center">
        <!-- Flex container for the heading, aligned with space between items -->
        <h1 class="text-primary">Bienvenue, {{ app.user.firstname }} {{ app.user.name }}</h1>
        <!-- Display a greeting message with the user's first name and last name -->
    </div>

    <div class="card mt-3 p-4">
        <!-- Card element with top margin and padding, used for profile content -->
        {% block profile_content %}{% endblock %}
        <!-- A block where profile-specific content can be inserted by child templates -->
    </div>

    <div class="d-flex justify-content-end mt-3">
        <!-- Flex container for right-aligning the return button -->
        <a href="{{ path('user_index') }}" class="btn btn-secondary">Retour au profil</a>
        <!-- A button to navigate back to the profile page -->
    </div>
</div>
{% endblock %}
