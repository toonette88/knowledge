{% extends 'base_admin.html.twig' %}

{% block title %}Créer une nouvelle catégorie{% endblock %}

{% block admin_content %}
    <div class="card shadow-sm p-4">
        <h3 class="mb-4 text-primary">Créer une nouvelle catégorie</h3>

        <div class="mb-3">
            {# Include the form for creating a new category with a custom button label and styling #}
            {{ include('category/_form.html.twig', {
                'button_label': 'Créer la catégorie',
                'button_class': 'btn btn-lg btn-primary fw-bold px-4',
                'label_title': 'Nom de la catégorie'
            }) }}
        </div>

        <div class="mt-3">
            {# Button to go back to the category list #}
            <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
