{% extends 'base_admin.html.twig' %}

{% block title %}Gestion des Catégories{% endblock %}

{% block admin_content %}
    <h1>Liste des Catégories</h1>

    <a href="{{ path('app_category_new') }}" class="btn btn-primary">Ajouter une catégorie</a>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">Éditer</a>
                        <a href="{{ path('app_category_delete', {'id': category.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucune catégorie disponible.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
