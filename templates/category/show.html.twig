{% extends 'base_admin.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block admin_content %}
    <!-- Title for the category details page -->
    <h3>Categorie</h3>

    <!-- Table displaying the details of the selected category -->
    <table class="table">
        <tbody>
            <!-- Row for displaying the category ID -->
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <!-- Row for displaying the category name -->
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <!-- Link to navigate back to the category list -->
    <a href="{{ path('app_category_index') }}">Retour Ã  la liste</a>

    <!-- Link to edit the current category -->
    <a href="{{ path('app_category_edit', {'id': category.id}) }}">Editer</a>

    <!-- Include the delete form for the category -->
    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
